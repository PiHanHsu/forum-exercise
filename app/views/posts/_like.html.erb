
 <% if like %>
   <%= link_to "Unlike", post_like_path(@post, like), :method => :delete, :class => "btn btn-primary btn-sm", :remote => true %>
 <% else %>
   <%= link_to "Like", post_likes_path(@post), :method => :post, :class => "btn btn-primary btn-sm", :remote => true %>
<% end %>
<span><%= @post.likes.count %></span>