
<P> Title: <%= @post.title %>
<p> Content: <%= @post.content %>
<p> Views: <%= @post.views%>
<p> Category:
	<% @post.categories.each do |c| %>
		<%= c.name %>
	<% end %>
</p>
<ul>
<% @post.comments.each do |comment| %>
	<li>
		<%= comment.content %>
		<%= comment.try(:user).try(:username) %>
		<%= link_to 'Delete', post_comment_path(@post, comment) ,:method => :delete, :class => "btn btn-danger btn-xs" %>
	</li>
<% end %>
</ul>

<%= form_for @comment, :url => post_comments_path(@post) do |f| %>
	<%= f.label :content, "Comment" %><br>
	<%= f.text_field :content, :class => "form-control", :placeholder => "Input comment" %><br>

<%= f.submit "Comment", :class => "btn btn-primary" %>
<%end%>

<br>
<p><%= link_to 'Back to index', posts_path %></p>
