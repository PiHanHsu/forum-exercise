    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="page-header">
                    Post List
                    <small>Secondary Text</small>
                </h1>
                <!-- Posts -->
                <% @posts.each do |post| %>
                    <div class="row clearfix">
                        <div class="col-lg-6">
                            <h2><%= link_to post.title, post_path(post) %></h2>
                            <p class="lead">
                                by <a><%= post.user.username%></a></p>
                            <p><span class="glyphicon glyphicon-time"></span> Posted on <%= post.updated_at.to_s(:long) %></p>
                            <p><span class="glyphicon glyphicon-thumbs-up"></span> Likes: <%= post.likes.count %> </p>
                            <p><span class="glyphicon glyphicon-heart"></span> Favorites: <%= post.subscriptions.count %> </p>
                        </div>
                        <div class="col-lg-6">
                            <h3></h3>
                            <img class="img-responsive" src="https://placeimg.com/320/180/any" alt="">
                        </div>
                    </div>   
                <hr>
                    <p><%= truncate post.content, length: 160 %></p>
                    <p><%= link_to 'Read More', post_path(post), class: "btn btn-primary" %></p>
                
                <hr>
                <% end %>
                

                <!-- Pager -->
                <div >
                    <%= paginate @posts, :theme => 'twitter-bootstrap-3' %>
                </div> 

            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                <div class="well">
                    <h4>New Post</h4>
                    <div>
                    <%= link_to 'New Post', new_post_path, :class => "btn btn-primary" %>
                </div>

                   
                </div>
                <div class="well">
                    <h4>Search</h4>
                    <div class ="form-group, form-inline">
                        <%= form_tag posts_path, :method => :get do %>
                        <%= text_field_tag :keyword, nil, :class => "form-control" %>
                        <%= submit_tag "Search", class: "btn btn-default btn-sm" %>
                        <% end %>
                    </div>

                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Categories</h4>
                    <div class="row">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                   <li><%= link_to "All", posts_path %></li>
                                <% @categories.each do |category| %>
                                   <li><%= link_to category.name, posts_path( :category => category) %></li>
                            <% end %>
                            </ul>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>

                <!-- Side Widget Well -->
                <div class="well">
                    <h4>Sort</h4>
                    <div class="row">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><%= link_to '標題名稱', posts_path( :order => "title") %></li>
                                <li><%= link_to '回應次數', posts_path( :order => "comments_count") %></li>
                                <li><%= link_to '回應時間', posts_path( :order => "updated_at") %></li>
                                <li><%= link_to '瀏覽次數', posts_path( :order => "views") %></li>
                            </ul> 
                        </div>
                    </div>
                                           
                </div>

            </div>

        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

