<div class = "row">
  <div class="col-sm-12 text-center">
     <h1> Posts List </h1>
  </div>
</div>

<div class ="form-group">
<%= form_tag posts_path, :method => :get do %>
  <%= text_field_tag "keyword" %>
  <%= submit_tag "Search", class: "btn btn-default btn-sm" %>
<% end %>
</div>

<div>
  <% @categories.each do |category| %>
  <%= link_to category.name, posts_path( :category => category) %>
  <% end %>
</div>
<div class="dropdown">
  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Sory by
  <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li><%= link_to '標題名稱', posts_path( :order => "title") %>
</li>
    <li><%= link_to '回應次數', posts_path( :order => "comments_count") %></li>
    <li><%= link_to '回應時間', posts_path( :order => "updated_at") %></li>
    <li><%= link_to '瀏覽次數', posts_path( :order => "views") %></li>
  </ul>
</div><br>
<table class = "table table-striped table-bordered ">
  <thead class = "thead">
    <th>
      <%= "Post Title"%>
    </th>
    <th>
       <%= "User"%>
    </th>
    <th>
      <%= "Comments #{}"%>
    </th>
    <th>
      <%= "Views"%>
    </th>
    <th>
      <%= "最近回覆時間"%>
    </th>

    <th>
       <%= "Action"%>
    </th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
  <tr>
    <td>
       <%= post.title %>
    </td>
    <td>
       <%= post.user.username %>
    </td> 
    <td>
       <%= post.comments_count %>
    </td> 
    <td>
       <%= post.views %>
    </td>
     <td>
       <%= post.updated_at %>
    </td>
    <td>
      <%= link_to 'Show', post_path(post), :class => "btn btn-primary" %>
      <%= link_to 'Edit', edit_post_path(post), :class => "btn btn-default" if post.user == current_user %>
      <%= link_to 'Delete', post_path(post, page: params[:page]) ,:method => :delete, :class => "btn btn-danger" if post.user == current_user %>
    </td>
   </tr>
  <% end %>
  </tbody>
	 
</table>

<div>
<%= link_to 'Add New Post', new_post_path, :class => "btn btn-primary" %>
</div>
<div >
<%= paginate @posts %>
</div> 

